@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center vh-100 text-white"
     style="background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
            url('/images/store-bg.jpg') no-repeat center center/cover;">

    <div class="text-center">
        <h1 class="display-2 fw-bold mb-4" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
            Welcome to <span style="color:#FFD700;">MyStore</span>
        </h1>

        <p class="lead mb-4">
            Your one-stop destination for <strong>Electronics, Books, Clothing</strong> & more.
        </p>

        <img src="/Image/nlogo.png" alt="Store Banner" class="img-fluid rounded shadow-lg mb-4" style="max-height:300px;" />

        <!-- Attractive Customer Text -->
        <div class="mt-3">
            <h3 class="fw-bold" style="color:#FFD700; text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
                🛒 Unbeatable Deals | 🚚 Fast Delivery | 💳 Secure Shopping
            </h3>
            <p class="fs-5 mt-3">
                Discover the latest trends, top-rated products, and exclusive discounts —
                all at <span style="color:#FFD700;">MyStore</span>.
                Shop smart, save big, and enjoy a hassle-free experience today!
            </p>
        </div>
    </div>
</div>
