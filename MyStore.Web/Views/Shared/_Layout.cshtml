<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyStore.Web</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyStore.Web.styles.css" asp-append-version="true" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <style>
        
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-dark bg-dark">
            <div class="container-fluid">
                <span class="navbar-brand mb-0 h1"><img src="./image/nlogo.png" style="height:50px;border-radius:5%;" /></span>
            </div>
        </nav>
    </header>

    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill"></i> Home
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Order" ? "active" : "")"
                   asp-area="" asp-controller="Order" asp-action="Index">
                    <i class="bi bi-cart-check-fill"></i> Orders
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Category" ? "active" : "")"
                   asp-area="" asp-controller="Category" asp-action="Index">
                    <i class="bi bi-tags-fill"></i> Categories
                </a>

                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Item" ? "active" : "")"
                   asp-area="" asp-controller="Item" asp-action="Index">
                    <i class="bi bi-box-seam"></i> Items
                </a>

            </nav>
        </div>


        <!-- Page Content -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Footer -->
    @* <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2025 - MyStore.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <!-- Footer -->
    <footer class="text-white text-center text-lg-start"
            style="background: linear-gradient(135deg, #0d0d0d, #1a1a1a);">
        <div class="container p-4">

            <div class="row">
                <!-- Logo / About -->
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0 text-start">
                    <h5 class="text-uppercase fw-bold">
                        <img src="./image/nlogo.png" style="height:40px;border-radius:5%;margin-right:8px;" />
                        MyStore
                    </h5>
                    <p class="mt-2">
                        Your one-stop shop for Electronics, Books, Clothing & more.
                        Shop smart, save big, and enjoy seamless shopping!
                    </p>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase fw-bold mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">Home</a></li>
                        <li><a asp-area="" asp-controller="Order" asp-action="Index" class="text-white text-decoration-none">Orders</a></li>
                        <li><a asp-area="" asp-controller="Category" asp-action="Index" class="text-white text-decoration-none">Categories</a></li>
                        <li><a asp-area="" asp-controller="Item" asp-action="Index" class="text-white text-decoration-none">Items</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase fw-bold mb-3">Contact</h5>
                    <p><i class="bi bi-geo-alt-fill"></i> New Delhi, India</p>
                    <p><i class="bi bi-envelope-fill"></i> support@mystore.com</p>
                    <p><i class="bi bi-telephone-fill"></i> +91 98765 43210</p>
                </div>

                <!-- Social Media -->
                <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
                    <h5 class="text-uppercase fw-bold mb-3">Follow Us</h5>
                    <a href="#" class="btn btn-outline-light btn-sm m-1 rounded-circle"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm m-1 rounded-circle"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm m-1 rounded-circle"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" class="btn btn-outline-light btn-sm m-1 rounded-circle"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="text-center p-3" style="background-color: rgba(255,255,255,0.05);">
            &copy; 2025 <span class="fw-bold" style="color:#FFD700;">MyStore.Web</span> |
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Privacy Policy</a>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- validate JS -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
