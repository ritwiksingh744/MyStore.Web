@{
    ViewData["Title"] = "Category Grid";
}

<div class="w-100">
    <div class="d-flex justify-content-between align-items-center">
        <h5><i class="bi bi-cart-check-fill"></i> Orders</h5>
        <a class="btn btn-secondary" href="/Order/OrderAddView">New Order</a>
    </div>
    <hr />
    <table id="orderGrid" class="display w-100">
        <thead>
            <tr>
                <th>Order No</th>
                <th>Order Date</th>
                <th>Order Total</th>
                <th>Customer Name</th>
                <th>Action</th>
            </tr>
        </thead>
     </table>
</div>
<input type="hidden" id="hiddenOrderId" />
@*-----------modal start here---------*@
@* add new modal *@
<div class="modal fade" id="orderDeleteModal" aria-labelledby="orderDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDeleteModalLabel">Add Category</h5>
            </div>
            <div class="modal-body">
                <div id="orderDeleteError" class="alert alert-danger d-none"></div>
                <p><strong>Do you want to delete order?</strong></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-success" id="orderDeleteBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

@*-----------modal end here-----------*@

@section Scripts{
    <script src="~/js/orders.js"></script>
}